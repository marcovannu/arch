#!/bin/bash

choices="Mount\nUnmount\nPowerOff"

chosen=$(echo -e "$choices" | dmenu -i -nf '#D7D7D7' -nb '#282828' -sb '#689D6A' -sf '#D7D7D7' -fn 'monospace-8' -p "USB")

case "$chosen" in
	Mount)  notify-send -t 4000 "USB" "Montando"
		devmon --mount-all;;
	Unmount) notify-send -t 4000 "USB" "Smontando"
		devmon -c;;
	PowerOff) notify-send -t 4000 "USB" "Power off"
	       	  udisksctl power-off -b /dev/sdc
esac
